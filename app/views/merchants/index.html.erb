<h1 align = "center">Merchants</h1>

<p align="center"><%= link_to "New Merchant", "/merchants/new" %></p>

<section class = "grid-container">
  <% @merchants.each do |merchant|%>
    <section id="merchant-<%= merchant.id %>">
      <% if current_admin? %>
      <section class = "shipping-address">
      <table>
        <tr>
          <th>Merchant</th>
          <th>City</th>
          <th>State</th>
          <th>Status</th>
          <th></th>
        </tr>
        <tr>
          <td><p><%=link_to merchant.name, "/admin/merchants/#{merchant.id}"%></p></td>
          <td><p><%=merchant.city%></p></td>
          <td><p><%=merchant.state%></p></td>
          <td><p><%=merchant.status%></p></td>
        <% if merchant.status == 'enabled' %>
            <td><%= button_to 'Disable', "/admin/merchants/#{merchant.id}", method: :patch %></td>
          <% else %>
            <td><%= button_to 'Enable', "/admin/merchants/#{merchant.id}", method: :patch %></td>
        <% end %>
        </tr>
      <% else %>
        <section class = "grid-item">
          <h2><%=link_to merchant.name, "/merchants/#{merchant.id}"%></h2>
        </section>
      <% end %>
    </table>
    </section>
    </section>
  <% end %>
</section>
