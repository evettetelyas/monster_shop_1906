<center>
    <h1>Sign up here for pugtastic discounts!</h1>

    <%= form_tag( new_user_path, method: :post) do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :address %>
    <%= text_field_tag :address %>
    <%= label_tag :city %>
    <%= text_field_tag :city %>
    <%= label_tag :state %>
    <%= text_field_tag :state %>
    <%= label_tag :zip %>
    <%= text_field_tag :zip %>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil %>

    <%= submit_tag "Submit" %>
    <% end %>
</center>