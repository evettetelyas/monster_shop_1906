          <li>Order Placed By: <%= order.user.name %></li>
          <li>Ordered on: <%= order.created_at.strftime('%F %T') %></li>
        </ul>
      </section>
    <% end %>
  </section>
  <section>
    <p>Cancelled Orders: </p>
    <% @orders.cancelled.each do |order| %>
      <section id="cancelled-order-<%= order.id %>">
        <ul>
          <li><%= link_to "#{order.id}", "/orders/#{order.id}" %></li>
          <li>Order Placed By: <%= order.user.name %></li>
          <li>Ordered on: <%= order.created_at.strftime('%F %T') %></li>
        </ul>
      </section>
    <% end %>
  </section>
</section>
