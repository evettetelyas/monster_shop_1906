<center>
        <h1>Edit <%= @item.name %></h1>
        <%= form_for @item, :url => merchant_update_item_path(@item) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.label :description %>
          <%= f.text_field :description %>
          <%= f.label :price %>
          <%= f.text_field :price %>
          <%= f.label :image %>
          <%= f.text_field :image %>
          <%= f.label :inventory %>
          <%= f.text_field :inventory %>
          <%= f.submit 'Submit' %>
        <% end %>
    </center>