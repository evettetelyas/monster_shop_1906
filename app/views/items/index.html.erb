<% if @merchant %>
  <h1><%= link_to @merchant.name, "/merchants/#{@merchant.id}", class: 'reg-link'%> Items</h1>
  <%= link_to "Add New Item", "/merchants/#{@merchant.id}/items/new", class: 'btn' %>
<% else %>
  <h1>All Items</h1>
<% end %>
<section class='item-stats'>
  <% if Order.first.nil? %>
      <h2>No orders yet, so no stats lol.</h2>
  <% else %>
  <section id="top-5-items">
    <h2>Top 5 Items Purchased:</h2>
    <table class="item-stat-table">
      <tr>
        <th>Item Name</th>
        <th>Total Quantity Ordered</th>
      </tr>
      <% @top_5.each do |item| %>
        <% if item.total_quantity > 0 %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.total_quantity %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </section>
  <section id="bottom-5-items">
    <h2>Bottom 5 Items Purchased:</h2>
    <table class="item-stat-table">
      <tr>
        <th>Item Name</th>
        <th>Total Quantity Ordered</th>
      </tr>
      <% @bottom_5.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.total_quantity %></td>
        </tr>
      <% end %>
    </table>
    <% end %>
  </section>
</section>
<section class="grid-container">
  <% @items.each do |item| %>
    <section class = "grid-item" id= 'item-<%=item.id%>'>
      <h2> <%=link_to item.name, "/items/#{item.id}" %> </h2>
      <p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
      <img src= <%= item.image %>>
      <p> <%= item.description unless @merchant%> </p>
      <p>Price: <%=number_to_currency(item.price) %> </p>
      <p>Inventory: <%= item.inventory %> </p>
      <% if !@merchant %>
      <% end %>
      <% if item.active? %>
        <p>Active</p>
      <% else %>
        <p>Inactive</p>
      <% end %>
    </section>
    <% end %>
</section>
