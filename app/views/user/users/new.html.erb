<center>
    <h1>Sign up here for pugtastic discounts!</h1>
    <%= form_for :user, url: user_register_path  do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, value: "#{@name ? @name : nil}" %>
      <%= f.label :address %>
      <%= f.text_field :address %>
      <%= f.label :city %>
      <%= f.text_field :city %>
      <%= f.label :state %>
      <%= f.text_field :state %>
      <%= f.label :zip %>
      <%= f.text_field :zip %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit 'Submit' %>
  <% end %>

</center>
